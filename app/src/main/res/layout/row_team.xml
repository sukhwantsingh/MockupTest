<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="6dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@color/color_black"
            app:civ_border_color="@color/color_white_opaque"
            app:civ_border_width="1dp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_username_phn"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imageView"
            android:gravity="right"
            android:letterSpacing=".05"
            android:paddingRight="@dimen/margin_from_wall_8dp"
            android:singleLine="true"
            android:text="Maciej Kowalski"
            android:textColor="@color/color_white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:background="@drawable/round_access_full"
                android:gravity="center"
                android:text="full access"
                android:textColor="@color/color_white"
                android:textColorHint="@color/gray_d"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/round_access_regular"
                android:gravity="center"
                android:text="regular access"
                android:textColor="@color/color_white"
                android:textColorHint="@color/gray_d"
                android:textSize="15sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_del_bg"
                android:padding="@dimen/margin_from_wall_8dp"
                android:src="@drawable/delete_24" />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>


